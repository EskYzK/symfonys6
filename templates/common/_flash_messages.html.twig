<div class="container mx-auto px-4 pt-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% set color = 'blue' %}
            {% set icon = 'ℹ️' %}

            {% if label == 'success' %}
                {% set color = 'green' %}
                {% set icon = '✅' %}
            {% elseif label == 'warning' %}
                {% set color = 'yellow' %}
                {% set icon = '⚠️' %}
            {% elseif label == 'error' %}
                {% set color = 'red' %}
                {% set icon = '❌' %}
            {% endif %}

            <div class="flex items-center mb-4 p-4 rounded-xl text-{{ color }}-800 bg-{{ color }}-100 shadow-md border border-{{ color }}-300" role="alert">
                <span class="text-xl mr-3">{{ icon }}</span>
                <span class="font-medium">{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}
</div>