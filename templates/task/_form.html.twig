{# templates/task/_form.html.twig #}
<div class="max-w-md mx-auto bg-white p-8 border border-gray-200 rounded-lg shadow-lg">
    {{ form_start(form) }}
        
        {# Champ Name #}
        <div class="mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.name) }}
        </div>
        
        {# Champ Description #}
        <div class="mb-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500', 'rows': 4}}) }}
            {{ form_errors(form.description) }}
        </div>
        
        <button type="submit" class="w-full bg-green-500 text-white font-bold py-2 px-4 rounded-md hover:bg-green-600 transition duration-150">
            {{ button_label|default('Enregistrer') }}
        </button>
        
    {{ form_end(form) }}
</div>