{% extends 'base.html.twig' %}

{% block title %}Détail de la tâche{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="bg-white shadow-xl rounded-lg p-8">
            <h1 class="text-3xl font-bold mb-4 text-gray-800">{{ task.name }}</h1>
            <p class="text-gray-700 whitespace-pre-wrap mb-6">{{ task.description }}</p>

            <div class="border-t pt-4 text-sm text-gray-600">
                <p><strong>Auteur :</strong> {{ task.author.email }}</p>
                <p><strong>Créée le :</strong> {{ task.createdAt|date('Y-m-d H:i') }}</p>
                {% if task.updatedAt %}
                    <p><strong>Dernière modification :</strong> {{ task.updatedAt|date('Y-m-d H:i') }}</p>
                {% endif %}
            </div>

            <div class="mt-6 flex space-x-4">
                <a href="{{ path('task_index') }}" class="inline-block text-blue-500 hover:underline">Retour à la liste</a>
                
                {% if is_granted('TASK_EDIT', task) %}
                    <a href="{{ path('task_edit', {id: task.id}) }}" class="inline-block text-yellow-500 hover:underline">Modifier</a>
                {% endif %}

                {% if is_granted('TASK_DELETE', task) %}
                    <form method="post" action="{{ path('task_delete', {id: task.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');" class="inline-block">
                        <input type="hidden" name="_method" value="POST">
                        <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}